#!/bin/dash

# Kill all descendents on exit
trap 'kill $(list_children $(cut -d " " -f4 < /proc/self/stat)) 2>/dev/null; exit' INT QUIT KILL TERM PIPE HUP

list_children () 
{
    children=$(ps -o pid= --ppid "$1")
    for pid in $children
    do
        list_children "$pid"
    done
    echo "$children"
}

while : ; do
    _txt="$(date '+%H:%M:%S')"
    echo "{ \"format\":\"$(date '+%H:%M:%S')\", \"prefix\":\"ï€— \" }"
    sleep 1
done
