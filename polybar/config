; Modify pulseaudio script for audio sink detection
; Add PIA mirror to the openvpn script

[colors]
bkgr =  ${env:PB_BKGR}
frgr =  ${env:PB_FRGR}
mute =  ${env:PB_MUTE}
crms =  ${env:PB_CRMS}
orng =  ${env:PB_ORNG}
gren =  ${env:PB_GREN}
cyan =  ${env:PB_CYAN}
indg =  ${env:PB_INDG}
viol =  ${env:PB_VIOL}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over

[global/wm]
margin-top = 0
margin-bottom = 0

;==========;
;          ;
;   Bars   ;
;          ;
;==========;

[bar/top]
monitor = ${env:MONITOR:eDP-1}
monitor-fallback = ${env:MONITOR:HDMI-2}
width = 100%
height = 32
offset-x = 0
offset-y = 0
background = ${colors.bkgr}
format-background = ${colors.bkgr}
foreground = ${colors.frgr}
line-size = 2
line-color = ${colors.mute}
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = "iosevka:pixelsize=10;1"
font-1 = "fontawesome:size=10;1"
font-2 = "Weather Icons:size=12;1"
modules-left = launch bspwm i3 xwindow
modules-center = redshift date time weather offlineimap
modules-right = backlight bluetooth fan temperature cpu memory battery powermenu
fixed-center = true
tray-transparent = false

[bar/wtop]
inherit = bar/top
monitor = ${env:MONITOR:DP-3}
modules-right = fan temperature cpu memory powermenu

[bar/bot]
bottom = true
monitor = ${env:MONITOR:eDP-1}
monitor-fallback = ${env:MONITOR:HDMI-2}
width = 100%
height = 32
offset-x = 0
offset-y = 0
background = ${colors.bkgr}
format-background = ${colors.bkgr}
foreground = ${colors.frgr}
line-size = 2
line-color = ${colors.mute}
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
font-0 = "iosevka:pixelsize=10;1"
font-1 = "fontawesome:size=10;1"
modules-left = wlan eth pkg vpn
modules-center = analog mpd
modules-right = xkeyboard uptime kernel bbswitch
fixed-center = false
tray-position = right
tray-transparent = false

[bar/wbot]
inherit = bar/bot
monitor = ${env:MONITOR:DP-3}
