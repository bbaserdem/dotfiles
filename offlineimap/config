[general]
ui = TTY.TTYUI
accounts = Gmail
pythonfile = $XDG_CONFIG_HOME/offlineimap/gmailPass.py
fsync = False
maxsyncaccounts = 1

#---------------#
#-----GMAIL-----#
#---------------#

[Account Gmail]
localrepository = Gmail-local
remoterepository = Gmail-remote
#---Set autorefresh---#
autorefresh = 0.5
quick = 2
postsynchook = ~/.config/notmuch new

[Repository Gmail-local]
type = Maildir  
localfolders = ~/Documents/Mail/Gmail
#---Fix label names---#
nametrans = lambda f: '[Gmail]/' + f if f in ['Starred', 'Important', 'Sent Mail', 'Drafts', 'All Mail', 'Spam', 'Trash'] else f

[Repository Gmail-remote]
#---Just autoconnect things---#
maxconnections = 1
keepalive = 60
holdconnectionopen = yes
type = Gmail
remoteuser = baserdem.batuhan@gmail.com
remotepasseval = get_app_pass()
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
realdelete = no
#---Fix label names---#
nametrans = lambda f: f.replace('[Gmail]/', '') if f.startswith('[Gmail]/') else f
#---Don't include All Mail---#
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail']

[mbnames]
#---Tell mutt the folders---#
enabled = yes
filename = ~/Documents/Mail/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = " \"+temp/search\"\n"
