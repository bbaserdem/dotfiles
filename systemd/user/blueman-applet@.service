[Unit]
Description=Bluetooth manager applet on X display %I
Documentation=man:blueman-applet(1)
After=X11@%i.target i3@%i.service sway@%i.service

[Service]
Environment=DISPLAY=%I
Type=simple
ExecStart=/usr/bin/blueman-applet
SyslogIdentifier=blueman-applet

[Install]
WantedBy=i3@.service
WantedBy=sway@.service
