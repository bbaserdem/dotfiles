post_install() {

    echo '[sbp-sys-uefi]==> Installing meta package …'
    
    /usr/share/refind/update_refind.sh

    echo '[sbp-sys-uefi]==> Be sure to configure rEFInd, or the system wont boot!'
    post_upgrade
}

post_upgrade() {

    echo '[sbp-base]==> Upgrading …'
    echo '[sbp-base]==> Nothing to upgrade.'
}
