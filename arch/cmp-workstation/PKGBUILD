    'dropbox'
    'lib32-nvidia-340xx-utils'
    'nvidia-340xx-dkms'
    'nvidia-340xx-utils'
    'ocl-icd'
    'opencl-nvidia-340xx'
    'os-prober'
    'libva-vdpau-driver'
)

package() {
    install -dm 0755 "${pkgdir}/etc/udev/rules.d"
    install -Dm 0644 workstation.network "${pkgdir}/etc/udev/rules.d/10-network.rules"
}

