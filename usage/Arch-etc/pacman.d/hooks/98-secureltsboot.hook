[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = linux-lts

[Action]
Description = Signing LTS Kernel for SecureBoot
When = PostTransaction
Exec = /usr/bin/sbsign --key /etc/refind.d/keys/refind_local.key --cert /etc/refind.d/keys/refind_local.crt --output /boot/EFI/Arch/vmlinuz-linux-lts /boot/EFI/Arch/vmlinuz-linux-lts
Depends = sbsigntools
