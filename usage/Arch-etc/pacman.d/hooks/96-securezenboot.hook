[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = linux-zen

[Action]
Description = Signing Hardened Kernel for SecureBoot
When = PostTransaction
Exec = /usr/bin/sbsign --key /etc/refind.d/keys/refind_local.key --cert /etc/refind.d/keys/refind_local.crt --output /boot/EFI/Arch/vmlinuz-linux-zen /boot/EFI/Arch/vmlinuz-linux-zen
Depends = sbsigntools
