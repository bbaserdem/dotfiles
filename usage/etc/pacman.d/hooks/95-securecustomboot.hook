[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = linux-custom

[Action]
Description = Signing custom Kernel for SecureBoot
When = PostTransaction
Exec = /usr/bin/sbsign --key /etc/refind.d/keys/refind_local.key --cert /etc/refind.d/keys/refind_local.crt --output /boot/EFI/Arch/vmlinuz-linux-custom /boot/EFI/Arch/vmlinuz-linux-custom
Depends = sbsigntools
