#--------------#
#-----KEYS-----#
#--------------#

set $Alt        Mod1
set $Meta       Mod4
set $Resize     ""
set $Gaps       ""
set $Gaps_In    ""
set $Gaps_Out   ""
set $Power              "<span color='#8F5536'>拉</span> <span color='#AC4142'>⏻:x</span> <span color='#F4BF75'>ﰇ:r</span> <span color='#90A959'>:h</span> <span color='#6A9FB5'>鈴:s</span> <span color='#AA759F'>﫢:l</span>"
set $Power_Shutdown     "<span color='#AC4142'>⏻ Shutdown? [y]es|[n]o</span>"
set $Power_Reboot       "<span color='#F4BF75'>ﰇ Reboot? [y]es|[n]o</span>"
set $Power_Hibernate    "<span color='#90A959'> Hibernate? [y]es|[n]o</span>"
set $Power_Sleep        "<span color='#6A9FB5'>鈴 Sleep? [y]es|[n]o</span>"
set $Power_Logout       "<span color='#AA759F'>﫢 Hybrid-Sleep? [y]es|[n]o</span>"

# Use to frag floating with mod
floating_modifier $Meta
##########################
#  LAUNCHERS & COMMANDS  #
##########################


# Terminal
bindsym $Meta+Return            exec "exec 8>&- ; $TERMINAL"
# Rofi (launcher)
bindsym $Meta+space             exec "exec 8>&- ; /usr/bin/rofi -show drun"
# Daemons
bindsym $Meta+d                 exec "exec 8>&- ; /usr/bin/env ~/.config/rofi/systemd"
# Password
bindsym $Meta+p                 exec "exec 8>&- ; /usr/bin/env /usr/bin/rofi-pass"
# Screenshot
bindsym Print                   exec "exec 8>&- ; maim ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png"
bindsym Shift+Print             exec "exec 8>&- ; maim -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png"
bindsym $Alt+Print              exec "exec 8>&- ; maim -s ~/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png"
# Wallpaper
bindsym $Meta+Down              exec --no-startup-id "exec 8>&- ; /usr/bin/systemctl --user start wallpaper@${DISPLAY}.service"
# Lock
bindsym $Meta+Escape            exec "exec 8>&- ; /usr/bin/systemctl --user start lock@${DISPLAY}.service"
# reload the configuration file
bindsym $Meta+Shift+Escape      exec "exec 8>&- ; /usr/bin/i3-msg reload"
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $Meta+Ctrl+r            exec "exec 8>&- ; /usr/bin/i3-msg restart"
# exit i3 (logs you out of your X session)
bindsym $Meta+$Alt+Escape       exec "exec 8>&- ; i3-msg exit"
# Music controls, with signal to 2
bindsym XF86AudioPlay           exec "exec 8>&- ; mpc toggle"
bindsym XF86AudioStop           exec "exec 8>&- ; mpc stop"
bindsym XF86AudioNext           exec "exec 8>&- ; mpc next"
bindsym XF86AudioPrev           exec "exec 8>&- ; if [[ $(mpc status | awk '/^\[playing\]/ { sub(/\/.+/,\\"\\",$3); split($3,a,/:/); print a[1]*60+a[2] }') -ge 3 ]]; then mpc seek 0; else mpc prev; fi"
# Sound controls, with signal to 1
bindsym XF86AudioRaiseVolume    exec "exec 8>&- ; /usr/bin/pamixer --increase 5"
bindsym XF86AudioLowerVolume    exec "exec 8>&- ; /usr/bin/pamixer --decrease 5"
bindsym XF86AudioMute           exec "exec 8>&- ; /usr/bin/pamixer --toggle-mute"
# Brightness settings
bindsym XF86MonBrightnessUp     exec "exec 8>&- ; /usr/bin/brightnessctl -d $BRI_SCR s +10 ; pkill -RTMIN+3 i3blocks ;"
bindsym XF86MonBrightnessDown   exec "exec 8>&- ; /usr/bin/brightnessctl -d $BRI_SCR s 10- ; pkill -RTMIN+3 i3blocks ;"
bindsym XF86KbdBrightnessUp     exec "exec 8>&- ; /usr/bin/brightnessctl -d $BRI_KBD s +1  ; pkill -RTMIN+3 i3blocks ;"
bindsym XF86KbdBrightnessDown   exec "exec 8>&- ; /usr/bin/brightnessctl -d $BRI_KBD s 1-  ; pkill -RTMIN+3 i3blocks ;"
# Compton
bindsym $Meta+c                 exec --no-startup-id "exec 8>&- ; if (systemctl is-active --user --quiet compton@${DISPLAY}.service); then systemctl --user stop compton@${DISPLAY}.service; else systemctl --user start compton@${DISPLAY}.service; fi"

# Kill window
bindsym $Meta+q kill
# change focus
bindsym $Meta+h focus left
bindsym $Meta+j focus down
bindsym $Meta+k focus up
bindsym $Meta+l focus right
# split in horizontal orientation
bindsym $Meta+comma split h
# split in vertical orientation
bindsym $Meta+period split v
# Screen modes
bindsym $Meta+m fullscreen
bindsym $Meta+t layout tabbed
bindsym $Meta+f floating toggle
bindsym $Meta+s layout stacking
bindsym $Meta+o layout toggle split
# Change focus between tiling/toggling
bindsym $Meta+Up focus mode_toggle
# Focus parent/child container
bindsym $Meta+a focus parent
bindsym $Meta+b focus child
# Switch to workspace
bindsym $Meta+Right workspace next
bindsym $Meta+Left  workspace prev
bindsym $Meta+1 workspace $ws1
bindsym $Meta+2 workspace $ws2
bindsym $Meta+3 workspace $ws3
bindsym $Meta+4 workspace $ws4
bindsym $Meta+5 workspace $ws5
bindsym $Meta+6 workspace $ws6
bindsym $Meta+7 workspace $ws7
bindsym $Meta+8 workspace $ws8
bindsym $Meta+9 workspace $ws9
bindsym $Meta+0 workspace $ws0
# Move focused to workspace
bindsym $Meta+Shift+Right move container to workspace next
bindsym $Meta+Shift+Left  move container to workspace prev
bindsym $Meta+Shift+1 move container to workspace $ws1
bindsym $Meta+Shift+2 move container to workspace $ws2
bindsym $Meta+Shift+3 move container to workspace $ws3
bindsym $Meta+Shift+4 move container to workspace $ws4
bindsym $Meta+Shift+5 move container to workspace $ws5
bindsym $Meta+Shift+6 move container to workspace $ws6
bindsym $Meta+Shift+7 move container to workspace $ws7
bindsym $Meta+Shift+8 move container to workspace $ws8
bindsym $Meta+Shift+9 move container to workspace $ws9
bindsym $Meta+Shift+0 move container to workspace $ws0
# Resizing
bindsym $Meta+w mode $Resize
mode $Resize {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $Meta+g mode $Gaps
mode $Gaps {
        bindsym o      mode $Gaps_Out
        bindsym i      mode $Gaps_In
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym 0       gaps inner current set 0 ; gaps outer current set 0 
        bindsym Shift+0 gaps inner all     set 0 ; gaps outer all     set 0 
}

mode $Gaps_In {
        bindsym plus  gaps inner current plus 5
        bindsym minus gaps inner current minus 5
        bindsym 0     gaps inner current set 0

        bindsym Shift+plus  gaps inner all plus 5
        bindsym Shift+minus gaps inner all minus 5
        bindsym Shift+0     gaps inner all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
mode $Gaps_Out {
        bindsym plus  gaps outer current plus 5
        bindsym minus gaps outer current minus 5
        bindsym 0     gaps outer current set 0

        bindsym Shift+plus  gaps outer all plus 5
        bindsym Shift+minus gaps outer all minus 5
        bindsym Shift+0     gaps outer all set 0

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym XF86PowerOff mode $Power
# Shutdown menu
mode --pango_markup $Power {
    bindsym x mode $Power_Shutdown
    bindsym r mode $Power_Reboot
    bindsym h mode $Power_Hibernate
    bindsym s mode $Power_Sleep
    bindsym l mode $Power_Logout
    bindsym Escape mode "default"
    bindsym XF86PowerOff mode "default"
}

mode --pango_markup $Power_Shutdown {
    bindsym y       exec "exec 8>&- ; /usr/bin/systemctl poweroff"
    bindsym Enter   exec "exec 8>&- ; /usr/bin/systemctl poweroff"
    bindsym n       mode "default"
    bindsym Escape  mode "default"
}

mode --pango_markup $Power_Reboot {
    bindsym y       exec "exec 8>&- ; /usr/bin/systemctl reboot"
    bindsym Enter   exec "exec 8>&- ; /usr/bin/systemctl reboot"
    bindsym n       mode "default"
    bindsym Escape  mode "default"
}

mode --pango_markup $Power_Hibernate {
    bindsym y       exec "exec 8>&- ; /usr/bin/systemctl hibernate"
    bindsym Enter   exec "exec 8>&- ; /usr/bin/systemctl hibernate"
    bindsym n       mode "default"
    bindsym Escape  mode "default"
}

mode --pango_markup $Power_Sleep {
    bindsym y       exec "exec 8>&- ; /usr/bin/systemctl sleep"
    bindsym Enter   exec "exec 8>&- ; /usr/bin/systemctl sleep"
    bindsym n       mode "default"
    bindsym Escape  mode "default"
}

mode --pango_markup $Power_Logout {
    bindsym y       exec "exec 8>&- ; /usr/bin/systemctl hybrid-sleep"
    bindsym Enter   exec "exec 8>&- ; /usr/bin/systemctl hybrid-sleep"
    bindsym n       mode "default"
    bindsym Escape  mode "default"
}

