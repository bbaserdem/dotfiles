#-----I3 Bar-----#
#----------------#

font pango:monospace 11px

set_from_resource $transp trans #202020CC
set_from_resource $black1 black #151515
set_from_resource $black2 backg #202020
set_from_resource $black3 grayD #303030
set_from_resource $black4 grayd #505050
set_from_resource $greyl1 grayl #B0B0B0
set_from_resource $greyl2 foreg #D0D0D0
set_from_resource $greyl3 whtDa #E0E0E0
set_from_resource $white0 white #F5F5F5
set_from_resource $redcol crmsn #AC4142
set_from_resource $orange orang #D28445
set_from_resource $yellow yllow #F4BF75
set_from_resource $greenc green #90A959
set_from_resource $cyanco lblue #75B5AA
set_from_resource $indigo indgo #6A9FB5
set_from_resource $violet violt #AA759F
set_from_resource $brownc brown #8F5536

# Base16 colors are as follows;
#base00 - Black     Default Background
#base01 - Gray:     Lighter Background (Used for status bars)
#base02 - Gray:     Selection Background
#base03 - Gray:     Comments, Invisibles, Line Highlighting
#base04 - Grayish:  Dark Foreground (Used for status bars)
#base05 - Grayish:  Default Foreground, Caret, Delimiters, Operators
#base06 - White:    Light Foreground (Not often used)
#base07 - White:    Light Background (Not often used)
#base08 - Red:      Variables, XML Tags, Markup Link Text, Markup Lists, Diff Deleted
#base09 - Orange:   Integers, Boolean, Constants, XML Attributes, Markup Link Url
#base0A - Yellow:   Classes, Markup Bold, Search Text Background
#base0B - Green:    Strings, Inherited Class, Markup Code, Diff Inserted
#base0C - Cyan:     Support, Regular Expressions, Escape Characters, Markup Quotes
#base0D - Indigo:   Functions, Methods, Attribute IDs, Headings
#base0E - Violet:   Keywords, Storage, Selector, Markup Italic, Diff Changed
#base0F - Brown:    Deprecated, Opening/Closing Embedded Language Tags, e.g.

# Basic bar configuration using the Base16 variables.
bar {
    output primary
    font pango:Iosevka Nerd Font 16px
    status_command /usr/bin/i3blocks -c ~/.config/i3blocks/config.top

    colors {
        background $transp
        separator  $black4
        statusline $greyl3

        # State             Border  BG      Text
        focused_workspace   $transp $transp $cyanco
        active_workspace    $transp $transp $indigo
        inactive_workspace  $transp $transp $black4
        urgent_workspace    $transp $transp $orange
        binding_mode        $transp $transp $greyl3
    }
	position top
	mode dock
	modifier None
    tray_output none

    i3bar_command i3bar -t
}

bar {
    output primary
    font pango:Iosevka Nerd Font 16px
    status_command /usr/bin/i3blocks -c ~/.config/i3blocks/config.bot

    colors {
        background $transp
        separator  $black4
        statusline $greyl3

        # State             Border  BG      Text
        focused_workspace   $transp $transp $cyanco
        active_workspace    $transp $transp $indigo
        inactive_workspace  $transp $transp $black4
        urgent_workspace    $transp $transp $orange
        binding_mode        $transp $transp $greyl3
    }
	position bottom
	mode dock
	modifier None
    workspace_buttons no
    tray_output primary

    i3bar_command i3bar -t
}
# Need this to update i3blocks on song change
# Need this to remember persistent workspace layout

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
client.focused          $black2 $black2 $white0 $redcol $redcol
client.focused_inactive $black1 $black1 $greyl1 $redcol $redcol
client.unfocused        $black1 $black1 $black4 $redcol $redcol
client.urgent           $black1 $black1 $orange $redcol $redcol
client.placeholder      $black1 $black1 $greyl2 $redcol $redcol
client.background       $black13

# Need these for gaps
for_window [class="^.*"] border pixel 0
gaps inner 12
gaps outer 0

