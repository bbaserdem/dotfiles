#-----------------#
#-----DISPLAY-----#
#-----------------#

# Window font
font pango:monospace 10

# Gaps
for_window [class="^.*"] border pixel 0
gaps inner 24
gaps outer 0

# Disable mouse moving around
mouse_warping none

#-------------#
#-----BAR-----#
#-------------#

#bar {
#    id                  bottom
#    mode                dock
#    tray_padding        4
#    status_command      i3status
#    font                pango:Iosevka 10
#}

#-----------------------#
#-----APP LOCATIONS-----#
#-----------------------#
# 1: Internet
workspace 1 output DP-3
workspace 1 output eDP-1
assign [class="qutebrowser"]        1
assign [class="Deluge"]             1
# 2: Work
workspace 2 output DP-3
workspace 2 output eDP-1
assign [class="MATLAB"]             2
assign [class="ParaView"]           2
# 3: Reading
workspace 3 output DP-3
workspace 3 output eDP-1
assign [class="Zathura"]            3
# 4: Coding
workspace 4 output DP-3
workspace 4 output eDP-1
assign [instance="termite"]         4
# 5: Writing
workspace 5 output DP-3
workspace 5 output eDP-1
assign [instance="libreoffice"]     5
assign [class="libreoffice-writer"] 5
# 6: Videos 
workspace 6 output DP-3
workspace 6 output eDP-1
assign [class="smplayer"]           6
assign [class="mpv"]                6
# 7: Mail
workspace 7 output DP-3
workspace 7 output eDP-1
# 8: Music
workspace 8 output DP-3
workspace 8 output eDP-1
assign [class="cantata"]            8
# 9: Games
workspace 9 output DP-3
workspace 9 output eDP-1
assign [class="Steam"]              9
assign [class="StepMania"]          9
# 10: Presentation
workspace 10 output DP-2
workspace 10 output HDMI-2
assign [class="rdesktop"]           10
assign [class="VirtualBox Machine"] 10

#-----------------#
#-----STARTUP-----#
#-----------------#

# Set volume to 20
exec pactl set-sink-volume 0 '20%'
exec pactl set-sink-mute 0 0
# Disable beeper
exec xset -b
# Screen saver settings
# xset dpms 300 600 900
# Set backlight
exec xbacklight -set 90
# Set wallpaper
exec wallpaper.sh
# Autostart programs
exec $XDG_CONFIG_HOME/i3/startup.sh

#------------------#
#-----KEYBINDS-----#
#------------------#

# Set modifier to super
set $mod Mod4

# XF keys keybinds
bindsym XF86AudioMute           exec pamixer --toggle-mute
bindsym XF86AudioRaiseVolume    exec pamixer --increase 5
bindsym XF86AudioLowerVolume    exec pamixer --decrease 5
bindsym XF86AudioPlay           exec mpc toggle
bindsym XF86AudioStop           exec mpc stop
bindsym XF86AudioNext           exec mpc next
bindsym XF86AudioPrev           exec playprev.sh
bindsym XF86MonBrightnessUp     exec xbacklight -inc 10
bindsym XF86MonBrightnessDown   exec xbacklight -dec 10
bindsym XF86HomePage            exec qutebrowser
bindsym XF86Calculator          exec i3-sensible-terminal -e bpython
bindsym --release Print         exec scrot '%Y-%m-%d_$wx$h.png' -e 'mv $f ~/Pictures/Screenshots'

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Launcher options
bindsym $mod+Return             exec i3-sensible-terminal
bindsym $mod+space              exec rofi -mode combi -show drun
bindsym $mod+Down               exec wallpaper.sh
bindsym $mod+p                  exec rofi-pass
bindsym $mod+e                  exec rofi-emoji.sh
bindsym $mod+Escape             exec lock.sh

# kill focused window
bindsym $mod+q                  kill
bindsym $mod+Mod1+Escape        reload
bindsym $mod+Shift+Escape       restart
bindsym $mod+Ctrl+Escape        exit

# change focus
bindsym $mod+j                  focus down
bindsym $mod+k                  focus up
bindsym $mod+l                  focus right
bindsym $mod+h                  focus left

# move focused window
bindsym $mod+Shift+j            move down
bindsym $mod+Shift+k            move up
bindsym $mod+Shift+l            move right
bindsym $mod+Shift+h            move left
# change focus between tiling / floating windows
bindsym $mod+period             focus mode_toggle
# focus the parent container
bindsym $mod+Shift+comma        focus parent
# focus the child container
bindsym $mod+Shift+period       focus child

# Split directions
bindsym $mod+s                  split h
bindsym $mod+i                  split v

# Screen mode
bindsym $mod+m                  fullscreen toggle
bindsym $mod+f                  floating toggle
bindsym $mod+Tab                layout tabbed
bindsym $mod+d                  layout stacking
bindsym $mod+t                  layout toggle split

# switch to workspace
bindsym $mod+Left               workspace prev
bindsym $mod+Right              workspace next
bindsym $mod+1                  workspace 1
bindsym $mod+2                  workspace 2
bindsym $mod+3                  workspace 3
bindsym $mod+4                  workspace 4
bindsym $mod+5                  workspace 5
bindsym $mod+6                  workspace 6
bindsym $mod+7                  workspace 7
bindsym $mod+8                  workspace 8
bindsym $mod+9                  workspace 9
bindsym $mod+0                  workspace 10

# move focused container to workspace
bindsym $mod+Shift+Left move container to workspace prev
bindsym $mod+Shift+Right move container to workspace next
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# resize window (you can also use the mouse for that)
mode "" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode ""


