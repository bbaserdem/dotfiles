[calendars]

[[personal]]
path = ~/Documents/Calendar/Personal
type = calendar
color = dark blue

[[work]]
path = ~/Documents/Calendar/Work
type = calendar
color = dark red

[[birthdays]]
path = ~/Documents/Contacts
type = birthdays
color = dark cyan

[[holiday]]
path = ~/Documents/Calendar/Holiday
type = calendar
color = dark green

[[travel]]
path = ~/Documents/Calendar/Travel
type = calendar
color = dark magenta

[default]
default_calendar = personal
highlight_event_days = true
timedelta = 30d

[locale]
timeformat = %H:%M
dateformat = %d/%m/%Y
longdateformat = %d/%m/%Y
datetimeformat = %d/%m/%Y %H:%M
longdatetimeformat = %d/%m/%Y %H:%M
