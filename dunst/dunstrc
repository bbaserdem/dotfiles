[global]
    # Display notifications on the first monitor
    # monitor = 0
    # In a multi-monitor setup, can override
    follow = none
    # Where the window dialog is to be
    geometry = "360x10-0+23"
    # Show number of hidden notifications
    indicate_hidden = yes
    # Compress if it can be compressed
    shrink = false
    # Background transparency
    transparency = 40
    # Notification height in pixels
    notification_height = 0
    # Seperator space between notifications
    separator_height = 2
    # Padding between border and content in vertical
    padding = 5
    # Border and content padding, in horizontal plane
    horizontal_padding = 5
    # Frame around notification window.
    frame_width = 2
    # Color of frame
    frame_color = "#000000"
    # Color of seperator
    separator_color = frame
    # Sorts urgent above others
    sort = yes
    # Disable timeout if screen was idle this many seconds
    idle_threshold = 120
    # Font to be used
    font = Droid Sans 12
    # Extra space between text lines
    line_height = 1
    # Allow bold<b>, italic<i>, strikethrough<s> and underline<u> html tags
    markup = full
    # Design formatting of the notification
    format = "<b>%s</b>\n%b"
    # Aligning text
    alignment = left
    # Show age of message, if it is older than this value (-1: disable)
    show_age_threshold = 60
    # Enable text wrapping
    word_wrap = yes
    # If word_wrap is disables, place ellipses
    ellipsize = end
    # Replace \n with whitespace
    ignore_newline = no
    # If true, stacks messages if duplicates
    stack_duplicates = true
    # hide the count of duplicates stack
    hide_duplicates_count = false
    # Where to place icons (off disables)
    icon_position = left
    # If >0, defines max icon size
    max_icon_size = 32
    # Paths where icons will be drawn from
    icon_path = /usr/share/icons/Papirus-Dark/32x32/status:/usr/share/icons/Papirus-Dark/32x32/devices:/usr/share/icons/Papirus-Dark/32x32/apps
    # If true, rrecalled notifications will not time out
    sticky_history = yes
    # Max number of notification to be kept in history
    history_length = 20
    # Command that will run dmenu
    dmenu = "/usr/bin/rofi -modi drun,run -show drun"
    # Command to open URLS
    browser = "/usr/bin/qutebrowser :open "
    # Run rule defined scripts, even when suppressed with ""
    always_run_script = true
    # Set this to true to get a notification when dunst is started
    startup_notification = false
    # For older nvidia cards
    force_xinerama = false

[urgency_low]
    background = "#222222"
    foreground = "#888888"
    timeout = 10

[urgency_normal]
    background = "#3d3d3d"
    foreground = "#ffffff"
    timeout = 10

[urgency_critical]
    background = "#900000"
    foreground = "#ffffff"
    timeout = 0

[shortcuts]
    # 'ctrl', 'mod1' (alt), 'mod2', 'mod3', 'mod4'(super)
    # close notification
    close = mod4+mod1+n
    # close all notifications
    close_all = mod4+shift+n
    # redisplay last message(s)
    history = mod4+n
    # context menu
    context = mod4+ctrl+n
