[general]
status_path = "~/.local/share/vdirsyncer/status/"

[pair contacts]
a = "contacts_local"
b = "contacts_server"
collections = ["from a", "from b"]
conflict_resolution = "b wins"

[pair calendar]
a = "calendar_local"
b = "calendar_server"
collections = ["from a", "from b"]
conflict_resolution = "b wins"
metadata = ["color"]

[storage contacts_local]
type = "filesystem"
path = "~/Contacts"
fileext = ".vcf"

[storage calendar_local]
type = "filesystem"
path = "~/Calendar"
fileext = ".ics"

[storage contacts_server]
type = "carddav"
url.fetch = ["command","~/.local/share/vdirsyncer/getPass.sh","CardDAV","url"]
username.fetch = ["command","~/.local/share/vdirsyncer/getPass.sh","CardDAV","uname"]
password.fetch = ["command","~/.local/share/vdirsyncer/getPass.sh","CardDAV","pass" ]

[storage calendar_server]
type = "caldav"
url.fetch = ["command","~/.local/share/vdirsyncer/getPass.sh","CalDAV","url"]
username.fetch = ["command","~/.local/share/vdirsyncer/getPass.sh","CalDAV","uname"]
password.fetch = ["command","~/.local/share/vdirsyncer/getPass.sh","CalDAV","pass" ]
