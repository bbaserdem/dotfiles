# Newsboat stuff
notify-always yes
notify-format "%f unread feeds ($n unread in total)"
notify-program "newsboat-notify.sh"
notify-beep no
confirm-exit no
auto-reload yes
cache-file "~/.cache/newsboat/cache.db"
error-log "~/.cache/newsboat/error.log"
urls-source "local"
datetime-format "%d/%m/%y"
# Podboat stuff
delete-played-files no
download-path "~/Downloads/Podcast %n %h"
max-downloads 3
player "mpd"
