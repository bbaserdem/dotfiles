#------------------------#
#-wm independent hotkeys-#
#------------------------#

# Reload monitor
super + F8
    $XDG_CONFIG_HOME/scripts/x-monitors.sh --now

# Terminal
super + Return
    $TERMINAL

# Scratchpad
F12
    $XDG_CONFIG_HOME/bspwm/dropdown.sh

# Rofi
super + space
    /usr/bin/rofi -show drun

# Password-store
super + p
    /usr/bin/rofi-pass

# Systemd
super + d
    $XDG_CONFIG_HOME/rofi/systemd

# Emoji
super + e
    /usr/bin/rofi -show emoji -modi emoji

# Music controls for mpd
XF86Audio{Play,Stop,Next}
    /usr/bin/mpc {toggle,stop,next}

# Grrrr
XF86AudioPrev
    $XDG_CONFIG_HOME/scripts/playprev.sh

# Volume controls
XF86Audio{Raise,Lower}Volume
    /usr/bin/pamixer --{increase,decrease} 5

XF86AudioMute
    /usr/bin/pamixer --toggle-mute

# Brightness setting for laptop
XF86MonBrightness{Up,Down}
    brightnessctl -d $BRI_SCR s {+5%,5%-}

XF86KbdBrightness{Up,Down}
    brightnessctl -d $BRI_KBD s {+1,1-}

# Power button
XF86PowerOff
    $XDG_CONFIG_HOME/scripts/power.sh

# Change wallpapers
super + c
    $XDG_CONFIG_HOME/scripts/x-wallpaper.sh --now

# Lock screen
super + Escape
    /usr/bin/xset s activate

# Screenshot
Print + {_,shift,alt}
    maim {_,-i $(xdotool getactivewindow),-s} $HOME/Pictures/Screenshots/$(date +%Y-%m-%d_%H:%M:%S).png

# make Sxhkd and bspwm reload its configuration files:
super + shift + Escape
    pkill -USR1 -x sxhkd; \
    $XDG_CONFIG_HOME/bspwm/config; \
    polybar-msg cmd restart

# Open python terminal
XF86Calculator
    $TERMINAL -e bpython

#---------------#
#-BSPWM HOTKEYS-#
#---------------#

# Close and Kill node
super + {_,shift + }q
    bspc node --{close,kill}
# Quit bspwm
super + alt + Escape
    bspc quit
# Change and move focused node
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}
super + {_,shift + }{Down,Up}
    bspc node -{f,s} {next,prev}.local
# Change and move to desktop
super + {_,shift + }{Left,Right}
    bspc {desktop -f,node -d} {prev,next}
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,0}'
# Alternate between tiled and monocle (stacked) layout
super + s
    bspc desktop -l next
# Set window state (original, tiled-ish, float, maximize)
super + {t,shift + t,f,m}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
# Toggle split orientation
super + o
    bspc node -R 90
# Focus parent or child
super + {a,b,comma,period}
    bspc node -f @{parent,brother,first,second}
# Node flags
super + ctrl + {s,p}
    bspc node -g {sticky,private}
# Make current node the biggest
super + g
    bspc node --swap biggest.local
# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node --presel-dir {west,south,north,east}
# preselect the ratio
super + ctrl + {1-9}
    bspc node --presel-ratio 0.{1-9}
# cancel the preselection for the focused node
super + ctrl + space
    bspc node --presel-dir cancel
# cancel the preselection for the focused desktop
super + ctrl + alt + space
    bspc query --nodes --desktop | xargs -I id -n 1 bspc node id -p cancel
# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node --resize {left -20 0,bottom 0 20,top 0 -20,right 20 0}
# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
    bspc node --resize {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# Move desktop to other monitor
super + alt + {Left,Right}
    desk=`bspc query -D -d focused`; \
    bspc desktop -m {prev,next}; \
    bspc monitor -f {prev,next}; \
    bspc desktop -f $desk
# move a floating window
super + alt + shift + {Left,Down,Up,Right}
    bspc node --move {-20 0,0 20,0 -20,20 0}
