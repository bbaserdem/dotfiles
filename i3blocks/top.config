# vim:ft=dosini
#-----------------#
#-----GLOBAL------#
#-----------------#
separator_block_width=15
markup=pango
format=json
interval=persist
command=~/.config/systeminfo/sysinfo-i3bar

#-------------------#
#-----BLOCKLETS-----#
#-------------------#

# Time
[clock]
accent=brown

# Date
[day]
accent=brown

# Music player daemon notification (red)
[music]
accent=red

# Pulseaudio volume (red)
[audio]
accent=orange

# Calendar (brown)
[calendar]
accent=yellow

# Tasks (brown)
[todo]
accent=yellow

# Offlineimap (yellow)
[email]
accent=green

# RSS (green)
[rss]
accent=green

# Brightness
[brightness]
accent=cyan

# Language
[keyboard]
accent=indigo

# Updates
[updates]
accent=violet

# Battery (varies)
[battery]
accent=yellow
