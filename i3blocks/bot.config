# vim:ft=dosini
#-----------------#
#-----GLOBAL------#
#-----------------#
separator_block_width=15
markup=pango
format=json
interval=persist
command=~/.config/systeminfo/systeminfo -m i3bar -t cc

#-------------------#
#-----BLOCKLETS-----#
#-------------------#

# Disk usage (Brown)
[disk]
accent=brown

# Temperature (Red)
#[temperature]
#accent=red

# Fan speed (Orange)
#[fan]
#accent=red

# Cpu info
[cpu]
accent=orange

# Memory
[ram]
accent=yellow

# Network
#[network]
#accent=green

# Wifi
#[wifi]
#accent=cyan

# Uptime (Indigo)
[uptime]
accent=indigo

# Kernel (Violet)
[kernel]
accent=violet
interval=once
